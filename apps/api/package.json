{
  "name": "api",
  "version": "0.0.0",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && npm run lint && tsc --build tsconfig.prod.json && tsc-alias",
    "dev": "ts-node-dev -r tsconfig-paths/register ./src",
    "dev:hot": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only ./src",
    "lint": "eslint ./src",
    "lint:tests": "eslint ./spec",
    "start": "NODE_ENV=production node ./dist",
    "test": "NODE_ENV=test ts-node ./spec",
    "test:hot": "nodemon --exec \"npm run test\" --watch ./src --watch ./spec -e ts",
    "db:migrate": "ts-node ./src/database/migrate-to-latest.ts",
    "db:add-user": "ts-node ./src/database/add-user.ts",
    "show-config": "NODE_ENV=production ts-node ./src/common/EnvVars.ts"  
  },
  "engines": {
    "node": ">=20.9.0"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.4",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^8.0.0",
    "jet-logger": "^2.0.1",
    "jsonfile": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.27.4",
    "module-alias": "^2.2.3",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "pg": "^8.13.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin-ts": "^2.9.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.0",
    "@types/find": "^0.2.4",
    "@types/fs-extra": "^11.0.4",
    "@types/jasmine": "^5.1.4",
    "@types/jsonfile": "^6.1.4",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.9",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.13.0",
    "eslint-plugin-n": "^17.11.1",
    "find": "^0.3.0",
    "fs-extra": "^11.2.0",
    "inserturlparams": "^2.0.4",
    "jasmine": "^5.4.0",
    "jet-paths": "^1.0.9",
    "nodemon": "^3.1.7",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0"
  }
}
{
  "name": "api",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && npm run lint && tsc --build tsconfig.prod.json && tsc-alias",
    "dev": "tsx watch ./src",
    "lint": "eslint ./src",
    "lint:tests": "eslint ./spec",
    "start": "NODE_ENV=production node ./dist",
    "test": "NODE_ENV=test jest",
    "db:migrate": "tsx ./src/scripts/migrate.ts latest",
    "db:migrate:down": "tsx ./src/scripts/migrate.ts down",
    "db:migrate:up": "tsx ./src/scripts/migrate.ts up",
    "db:migrate:list": "tsx ./src/scripts/migrate.ts list",
    "db:add-user": "tsx ./src/scripts/add-user.ts"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.4",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-async-errors": "^3.1.1",
    "express-openapi-validator": "5.5.8",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.27.4",
    "morgan": "^1.10.0",
    "pg": "^8.13.1",
    "pino": "^9.9.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@stylistic/eslint-plugin-ts": "^2.9.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.9",
    "@types/pg": "^8.11.10",
    "eslint": "^9.39.0",
    "eslint-plugin-n": "^17.11.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.5",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
